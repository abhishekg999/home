---
import { Projects as ProjectsComponent } from "../components/Projects";
import BaseLayout from "../layouts/BaseLayout.astro";
import { getProjectsData } from "../utils/projects";
import {
  generateWebPageSchema,
  getCanonicalUrl,
  getOgImageUrl,
} from "../utils/seo";

const canonicalUrl = getCanonicalUrl("/projects");
const ogImageUrl = getOgImageUrl("projects");
const description =
  "Tools and utilities for developers and security researchers, more to come!";
const schema = generateWebPageSchema(
  "Abhishek Govindarasu - Projects",
  description,
  canonicalUrl,
);

const projects = await getProjectsData();
---

<BaseLayout
  title="Abhishek Govindarasu - Projects"
  description={description}
  canonical={canonicalUrl}
  ogImage={ogImageUrl}
  schema={schema}
>
  <ProjectsComponent projects={projects} client:only="preact" />
</BaseLayout>

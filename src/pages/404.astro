---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout
  title="Abhishek Govindarasu - 404"
  description="The page you are looking for does not exist."
>
  <main
    class="flex-grow flex flex-col justify-center items-center px-4 relative z-20"
  >
    <div class="max-w-2xl w-full">
      <div
        class="bg-white/[0.02] backdrop-blur-sm border border-white/10 p-8 md:p-12 lg:p-16"
      >
        <div class="mb-8 md:mb-12">
          <div class="flex items-center gap-4 mb-6">
            <div
              class="w-16 h-16 md:w-20 md:h-20 flex items-center justify-center bg-white/5 border border-white/10"
            >
              <span
                class="text-2xl md:text-3xl font-bold text-white/90 font-mono"
                >404</span
              >
            </div>
            <div class="h-px flex-grow bg-white/10"></div>
          </div>

          <h1 class="text-3xl md:text-5xl font-bold text-white mb-4 md:mb-6">
            Page Not Found
          </h1>

          <p class="text-base md:text-lg text-white/60 leading-relaxed mb-8">
            The page you're looking for doesn't exist or has been moved.
          </p>
        </div>

        <div class="space-y-0">
          <a
            href="/"
            class="group block relative border-t border-white/10 py-4 md:py-5 transition-all duration-300 hover:bg-white/[0.02]"
          >
            <div class="flex items-center justify-between pl-4 pr-4">
              <span
                class="text-base md:text-lg text-white group-hover:text-accent transition-colors"
              >
                Home
              </span>
              <svg
                class="w-4 h-4 text-white/30 group-hover:text-white/60 group-hover:translate-x-1 transition-all"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="square"
                  stroke-linejoin="miter"
                  stroke-width={2}
                  d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
            </div>
            <div
              class="absolute left-0 top-0 w-1 h-0 group-hover:h-full transition-all duration-300 bg-accent"
            >
            </div>
          </a>

          <a
            href="/blog"
            class="group block relative border-t border-white/10 py-4 md:py-5 transition-all duration-300 hover:bg-white/[0.02]"
          >
            <div class="flex items-center justify-between pl-4 pr-4">
              <span
                class="text-base md:text-lg text-white group-hover:text-accent transition-colors"
              >
                Blog
              </span>
              <svg
                class="w-4 h-4 text-white/30 group-hover:text-white/60 group-hover:translate-x-1 transition-all"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="square"
                  stroke-linejoin="miter"
                  stroke-width={2}
                  d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
            </div>
            <div
              class="absolute left-0 top-0 w-1 h-0 group-hover:h-full transition-all duration-300 bg-accent"
            >
            </div>
          </a>

          <a
            href="/projects"
            class="group block relative border-t border-white/10 py-4 md:py-5 transition-all duration-300 hover:bg-white/[0.02]"
          >
            <div class="flex items-center justify-between pl-4 pr-4">
              <span
                class="text-base md:text-lg text-white group-hover:text-accent transition-colors"
              >
                Projects
              </span>
              <svg
                class="w-4 h-4 text-white/30 group-hover:text-white/60 group-hover:translate-x-1 transition-all"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="square"
                  stroke-linejoin="miter"
                  stroke-width={2}
                  d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
            </div>
            <div
              class="absolute left-0 top-0 w-1 h-0 group-hover:h-full transition-all duration-300 bg-accent"
            >
            </div>
          </a>

          <div class="border-t border-white/10"></div>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>

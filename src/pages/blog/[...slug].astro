---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
import { TableOfContents } from "../../components/TableOfContents";
import RelatedPosts from "../../components/RelatedPosts.astro";
import { formatDate, getReadingTime } from "../../utils/blog";
import {
  getOgImageUrl,
  getCanonicalUrl,
  generateArticleSchema,
} from "../../utils/seo";

export async function getStaticPaths() {
  const posts = await getCollection("blog");
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content, headings } = await post.render();
const stats = { text: getReadingTime(post.body) };

const canonicalUrl = getCanonicalUrl(`/blog/${post.slug}`);
const ogImageUrl = getOgImageUrl(post.slug);
const schema = generateArticleSchema(post, canonicalUrl, ogImageUrl);
---

<BaseLayout
  title={post.data.title}
  description={post.data.description || post.data.title}
  canonical={canonicalUrl}
  ogImage={ogImageUrl}
  article={true}
  schema={schema}
>
  <main class="flex-grow relative z-20 pt-28 pb-20 px-4 sm:px-6 lg:px-8">
    <div class="max-w-5xl mx-auto flex gap-12">
      <article class="flex-1 min-w-0 overflow-hidden">
        <header class="mb-10 md:mb-14 pb-8 border-b border-white/10">
          <a
            href="/blog"
            class="text-white/40 hover:text-white/70 mb-6 inline-flex items-center gap-1.5 text-xs font-medium transition-colors"
          >
            <svg
              class="w-3 h-3"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="2"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M15 19l-7-7 7-7"></path>
            </svg>
            Back
          </a>
          <h1
            class="text-2xl md:text-3xl lg:text-4xl font-bold text-white mb-4 leading-tight"
          >
            {post.data.title}
          </h1>
          <div class="flex items-center gap-4 text-xs text-white/30 font-mono">
            <time>
              {formatDate(post.data.date)}
            </time>
            <span>{stats.text}</span>
          </div>
          {
            post.data.tags && post.data.tags.length > 0 && (
              <div class="flex gap-1.5 mt-5 flex-wrap">
                {post.data.tags.map((tag) => (
                  <span class="px-1.5 py-0.5 text-[10px] text-white/40 border border-white/10 font-medium">
                    {tag}
                  </span>
                ))}
              </div>
            )
          }
        </header>

        <div
          class="prose prose-invert max-w-none overflow-x-hidden
        prose-headings:text-white prose-headings:font-semibold prose-headings:mb-4 prose-headings:mt-10 prose-headings:break-words
        prose-h1:text-2xl prose-h2:text-xl prose-h3:text-lg
        prose-p:text-white/70 prose-p:leading-[1.8] prose-p:mb-5 prose-p:break-words prose-p:text-[15px]
        prose-a:text-accent prose-a:no-underline hover:prose-a:text-accent-hover prose-a:transition-colors prose-a:break-words
        prose-strong:text-white prose-strong:font-medium
        prose-code:text-accent/80 prose-code:text-sm prose-code:font-mono prose-code:break-words
        prose-img:my-8 prose-img:max-w-full prose-img:h-auto
        prose-pre:max-w-full prose-pre:overflow-x-auto
        prose-blockquote:border-l prose-blockquote:border-white/20 prose-blockquote:pl-4 prose-blockquote:py-0
        prose-blockquote:text-white/50 prose-blockquote:italic prose-blockquote:break-words prose-blockquote:text-sm
        prose-ul:text-white/70 prose-ul:break-words prose-ul:text-[15px] prose-ol:text-white/70 prose-ol:break-words prose-ol:text-[15px]
        prose-li:marker:text-white/30 prose-li:break-words prose-li:my-2
        prose-table:border prose-table:border-white/10 prose-table:w-full prose-table:overflow-x-auto prose-table:block prose-table:text-sm
        prose-th:bg-white/5 prose-th:text-white/80 prose-th:font-medium prose-th:break-words
        prose-td:border prose-td:border-white/10 prose-td:text-white/60 prose-td:break-words
        prose-hr:border-white/10"
        >
          <Content />
        </div>
        <RelatedPosts currentPost={post} />
      </article>
      <aside class="hidden xl:block w-48 shrink-0">
        <TableOfContents headings={headings} client:load />
      </aside>
    </div>
  </main>
</BaseLayout>
